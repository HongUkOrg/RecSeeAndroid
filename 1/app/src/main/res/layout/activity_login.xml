<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Recsee"
    tools:context="com.example.user.database.LoginActivity">



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingTop="35dp">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:src="@drawable/recsee_bi_white"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="380dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/rounded"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spinner_server"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:paddingLeft="50dp"
                android:spinnerMode="dropdown"
                android:drawSelectorOnTop="true"
                android:popupBackground="@android:color/white"
                android:background="@drawable/spinner_server"
                />
            <EditText
                android:id="@+id/spinner_user"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"
                android:paddingLeft="50dp"
                android:maxLength="20"
                android:singleLine="true"
                android:hint ="USERNAME"
                android:textStyle="bold"
                android:textColorHint="@android:color/darker_gray"
                android:background="@drawable/spinner_user" />
            <EditText
                android:id="@+id/spinner_pass"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"
                android:paddingLeft="50dp"
                android:maxLength="20"
                android:textStyle="bold"
                android:hint ="PASSWORD"
                android:textColorHint="@android:color/darker_gray"
                android:singleLine="true"
                android:background="@drawable/spinner_pass" />

            <Button
                android:id="@+id/login_btn"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:text="LOGIN"
                android:textColor="@android:color/white"
                android:background="@drawable/login_button"
                android:textSize="25dp"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>



</android.support.constraint.ConstraintLayout>
