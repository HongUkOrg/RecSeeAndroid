<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:background="#ffffff"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.user.database.Fragment.OneFragment">


    <Button
        android:id="@+id/uploadButton2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="26dp"

        android:text="Click To Upload AllFile"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/textMessage2"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:textColor="#444444"

        android:layout_alignTop="@+id/uploadButton2"


        android:text="please press button to upload all record files which exist but not uploaded yet"

        />

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="450dp"


        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/back2" />


</RelativeLayout>
