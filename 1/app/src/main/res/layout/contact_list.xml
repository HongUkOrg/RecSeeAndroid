<?xml version="1.0" encoding="utf-8"?>
<com.example.user.database.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="1dp"

    android:layout_marginStart="1dp"
    android:background="@color/color_card"

    android:orientation="vertical"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:id="@+id/row"

        android:background="@drawable/custom_bg"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="25dp">


        <TextView

            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="54dp"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="30dp"
            android:paddingTop="10dp"


            android:gravity="center_horizontal"

            android:text="startTime"
            android:textColor="#000000"

            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginEnd="8dp"

            android:text="John doe"
            android:textSize="15sp"
            android:textColor="#777777"
            android:textAppearance="@android:style/TextAppearance.Material.Menu"
            app:layout_constraintTop_toTopOf="@+id/profile_image"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toLeftOf="@+id/imageView5"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="0dp"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/profile_image"
            android:layout_marginLeft="16dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            tools:targetApi="lollipop" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="17dp"
            android:text="unknown"
            android:textSize="13sp"
            android:textColor="#2ab577"
            android:textAppearance="@android:style/TextAppearance.Material.Menu"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/textView2"
            app:layout_constraintRight_toRightOf="@+id/textView2"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            android:gravity="center_horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/profile_image"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView5"
            tools:targetApi="lollipop" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="19dp"
            android:layout_height="16dp"
            android:layout_marginRight="20dp"


            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView5"
            app:srcCompat="@drawable/icon_menu_file" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="19dp"
            android:layout_height="16dp"
            android:layout_marginRight="25dp"


            app:layout_constraintRight_toRightOf="@id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView5"

            app:srcCompat="@drawable/ic_local_search_airport_highlighted" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="14dp"
            android:layout_marginRight="20dp"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:text="OUT MISS"
            android:textAppearance="@android:style/TextAppearance.Material.Small"
            android:textColor="#2ab577"
            android:textSize="9sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/imageView5"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView3"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1"
            tools:targetApi="lollipop" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="19dp"
            android:layout_height="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="0dp"

            app:layout_constraintRight_toLeftOf="@+id/imageView2"
            app:srcCompat="@drawable/ic_microphone"
            app:layout_constraintTop_toTopOf="@+id/textView2"
            android:layout_marginTop="0dp" />

        <CheckBox

            android:id="@+id/checkBox1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:clickable="false"
            android:focusable="false"
            android:outlineAmbientShadowColor="#000000"
            android:outlineSpotShadowColor="#000000"




            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />


    </android.support.constraint.ConstraintLayout>
</com.example.user.database.CheckableLinearLayout>
